---
import { CounterSolid } from '@/components/CounterSolid'
import { LayoutBase } from '@/layouts'

const title = `Pokemon Static | Islands`
---

<LayoutBase title={title}>
  <main class="pt-8">
    <div class="flex justify-center py-4">
      <video class="aspect-video" controls autoplay transition:persist="video">
        <source
          src="https://ia804502.us.archive.org/33/items/GoldenGa1939_3/GoldenGa1939_3_512kb.mp4"
          type="video/mp4"
        />
      </video>
    </div>
    <CounterSolid transition:persist="counter-solid" transition:persist-props initialValue={20} client:load>
      <h2 class="text-7xl text-center">Counter</h2>
    </CounterSolid>
  </main>
</LayoutBase>
