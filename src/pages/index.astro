---
import { PokemonCard, PokemonList } from "@/components"
import { getPokemons } from '@/services'
import { LayoutBase } from "@/layouts"

const pokemons = await getPokemons({ limit: 8 })

const title = 'Pokemon Static | Home'

---

<LayoutBase title={title}>
  <main aria-label="Listado de pokemons" class="container mx-auto p-4">
    <PokemonList data={pokemons} />
    <div class="flex justify-center my-12">
      <a class="text-xl text-neutral-950 font-bold bg-orange-400 rounded-full px-4 pb-2 pt-1.5" href="/pokemons/1">Ver todos</a>
    </div>
  </main>
</LayoutBase>
